<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_vertical"
    >
    <!-- 登录界面中的Title和返回按钮 -->
    <RelativeLayout 
        android:id="@+id/mTitleBar"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_title_bar"
        >
        <Button
            android:id="@+id/mTitleBtnBack"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/btn_text_back"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@drawable/selector_title_btn_back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/text_title_doing"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"          
            />    
    </RelativeLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:orientation="vertical"
    	android:padding="10dp"
    	android:layout_below="@+id/mTitleBar"
	    >
	    <RelativeLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:background="@color/skyblue"
		    android:layout_marginTop="10dp"
		    android:layout_marginBottom="10dp"
		    >
		    <!-- 开启口袋模式 -->
		    <LinearLayout 
		        android:layout_width="fill_parent"
		    	android:layout_height="fill_parent"
		    	android:orientation="horizontal"
		        >			    
			    <RelativeLayout
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				    android:background="@color/lightblack"
				    android:layout_marginLeft="8dp"	
				    android:layout_marginBottom="2dp"	
				    android:layout_weight="1"	    
				    >
				    <ImageView 
				        android:id="@+id/iv_pocket"
				        android:layout_width="wrap_content"
				        android:layout_height="fill_parent"
				        android:scaleType="centerInside"	
				        android:layout_centerInParent="true"	        
				        />
				</RelativeLayout>
				<RelativeLayout
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				    android:layout_weight="2.5"
				    >
				    <ImageView 
				        android:id="@+id/iv_startGuardPocket"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:scaleType="centerInside"		
				        android:src="@drawable/ic_guarder_start_pocket"
				        android:layout_centerInParent="true"
				        android:visibility="gone"		        				        			        		        
				        />
				    <ImageView 
				        android:id="@+id/iv_closeGuardPocket"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:scaleType="centerInside"		
				        android:src="@drawable/ic_guarder_close_pocket"
				        android:layout_centerInParent="true"
				        android:visibility="gone"		        				        			        		        
				        />
				</RelativeLayout>
			</LinearLayout>
		</RelativeLayout>
		
		<!-- 开启手持模式 -->		
		<RelativeLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:background="@color/skyblue"
		    android:layout_marginTop="10dp"
		    android:layout_marginBottom="10dp"
		    >
		    <LinearLayout 
		        android:layout_width="fill_parent"
		    	android:layout_height="fill_parent"
		    	android:orientation="horizontal"
		        >
				<RelativeLayout
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				    android:layout_weight="2.5"
				    >
				    <ImageView 
				        android:id="@+id/iv_startGuardHand"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:scaleType="centerInside"		
				        android:src="@drawable/ic_guarder_start_hand"
				        android:layout_centerInParent="true"		   
				        android:visibility="gone"     				        			        		        
				        />
				    <ImageView 
				        android:id="@+id/iv_closeGuardHand"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:scaleType="centerInside"		
				        android:src="@drawable/ic_guarder_close_hand"
				        android:layout_centerInParent="true"	
				        android:visibility="gone"	        				        			        		        
				        />
				</RelativeLayout>
				<RelativeLayout
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				    android:background="@color/lightblack"
				    android:layout_marginRight="8dp"	
				    android:layout_marginBottom="2dp"
				    android:layout_weight="1"	
				    >
				    <ImageView 
				        android:id="@+id/iv_hand"
				        android:layout_width="wrap_content"
				        android:layout_height="fill_parent"
				        android:scaleType="centerInside"	
				        android:layout_centerInParent="true"	        
				        />
				</RelativeLayout>
			</LinearLayout>
		</RelativeLayout>
		<!-- 开启离开模式 -->
		<RelativeLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:background="@color/skyblue"
		    android:layout_marginTop="10dp"
		    android:layout_marginBottom="10dp"
		    >
		    <LinearLayout 
		        android:layout_width="fill_parent"
		    	android:layout_height="fill_parent"
		    	android:orientation="horizontal"
		        >
				<RelativeLayout
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				    android:background="@color/lightblack"
				    android:layout_marginLeft="8dp"	
				    android:layout_marginBottom="2dp"		
				    android:layout_weight="1"    
				    >
				    <ImageView 
				        android:id="@+id/iv_away"
				        android:layout_width="wrap_content"
				        android:layout_height="fill_parent"
				        android:scaleType="centerInside"	
				        android:layout_centerInParent="true"	 			               
				        />			    
				</RelativeLayout>
				<RelativeLayout
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				    android:layout_weight="2.5"    
				    >
				    <ImageView 
				        android:id="@+id/iv_startGuardAway"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:scaleType="centerInside"		
				        android:src="@drawable/ic_guarder_start_away"
				        android:layout_centerInParent="true"	
				        android:visibility="gone"	        				        			        		        
				        />
				    <ImageView 
				        android:id="@+id/iv_closeGuardAway"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:scaleType="centerInside"		
				        android:src="@drawable/ic_guarder_close_away"
				        android:layout_centerInParent="true"	
				        android:visibility="gone"	        				        			        		        
				        />
				</RelativeLayout>
			</LinearLayout>
		</RelativeLayout>
	</LinearLayout>

</RelativeLayout>
